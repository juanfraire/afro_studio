<resources>

    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--<style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/green_afrostudio</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">@color/green_afrostudio</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/darkGray_afrostudio</item>
        <item name="android:logo">@drawable/logo_action_bar</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <!-- Support library compatibility -->
        <item name="background">@color/darkGray_afrostudio</item>
        <item name="logo">@drawable/logo_action_bar</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/green_afrostudio</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>



</resources>
